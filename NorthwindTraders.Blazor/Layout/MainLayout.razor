@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <h1>Northwind Traders</h1>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: row;
    }

    main {
        flex: 1;
    }

    .sidebar {
        background-color: #f3f4f6;
        width: 250px;
    }

    .top-row {
        background-color: #0d6efd;
        color: white;
        border-bottom: 1px solid #d6d5d5;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .content {
        padding-top: 1.1rem;
    }
</style>
